# GoTalk Environment Configuration
APP_ENV=development
APP_PORT=8080

# PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USER=gotalk
DB_PASSWORD=your_password
DB_NAME=gotalk
DB_SSLMODE=disable

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=change-this-in-production
JWT_EXPIRY=24h

# MinIO (S3 compatible)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your_minio_key
MINIO_SECRET_KEY=your_minio_secret
MINIO_BUCKET=gotalk-media
MINIO_USE_SSL=false

# SMTP (Mailpit for development)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@gotalk.local
SMTP_FROM_NAME=GoTalk

# Google OAuth2 (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# CORS
CORS_ORIGINS=http://localhost:3000,http://chat.localhost
